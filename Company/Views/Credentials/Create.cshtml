@model Company.Models.Учетные_данные

@{
    Layout = "_LayoutNone";
    ViewData["Title"] = "Добавление";
}
<style>
    body {
        background: linear-gradient(to right, #ff6ec7, #2f2f2f);
        font-family: Arial, sans-serif;
        color: #ffffff;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    h1, h2, h4 {
        color: #FFA8F3;
        font-weight: bold;
        margin: 20px;
    }

    .btn, a {
        border-radius: 50px;
        border: 2px solid #545454;
        margin: 10px; 
        padding: 10px 20px;
        font-size: 16px;
        color: #ffffff;
        background-color: #ff6ec7;
        transition: background-color 0.3s, color 0.3s;
        text-decoration: none;
        display: inline-block; 
    }

        .btn:hover, a:hover {
            background-color: #e05cae;
            color: #ffffff;
        }

    .row {
        margin: 20px;
        width: 100%;
        max-width: 800px;
        background-color: #3a3a3a;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-top: 20px;
    }

    .control-label {
        color: #FFA8F3;
        font-weight: bold;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #ff6ec7;
        padding: 10px;
        font-size: 16px;
        background-color: #2f2f2f;
        color: #ffffff;
    }

    .text-danger {
        color: #ff6ec7;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .back-link {
        margin-top: 20px;
    }

    .anchor {
        position: fixed;
        bottom: 20px;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        font-size: 24px;
        border-radius: 50%;
        background-color: #ff6ec7;
        color: #ffffff;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .anchor:hover {
            background-color: #e05cae;
        }

    .anchor-up {
        right: 20px;
    }

    .anchor-down {
        left: 20px;
    }
</style>
<h1>Добавление</h1>

<h4>Учетные_данные</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Код_сотрудника" class="control-label"></label>
                <select asp-for="Код_сотрудника" class ="form-control" asp-items="ViewBag.Код_сотрудника"></select>
            </div>
            <div class="form-group">
                <label asp-for="Код_статуса" class="control-label"></label>
                <select asp-for="Код_статуса" class ="form-control" asp-items="ViewBag.Код_статуса"></select>
            </div>
            <div class="form-group">
                <label asp-for="Срок_действия_учетки" class="control-label"></label>
                <input asp-for="Срок_действия_учетки" class="form-control" />
                <span asp-validation-for="Срок_действия_учетки" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Последний_вход" class="control-label"></label>
                <input asp-for="Последний_вход" class="form-control" />
                <span asp-validation-for="Последний_вход" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

<a href="#" class="anchor anchor-up" onclick="scrollToTop()">&uarr;</a>
<a href="#bottom" class="anchor anchor-down" onclick="scrollToBottom()">&darr;</a>

<script>
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function scrollToBottom() {
        const bottom = document.getElementById('bottom');
        bottom.scrollIntoView({ behavior: 'smooth' });
    }
</script>