@model Company.Models.Ограничения_доступа

@{
    ViewData["Title"] = "Удаление";
}
<style>
    body {
        background: linear-gradient(to right, #ff6ec7, #2f2f2f);
        font-family: Arial, sans-serif;
        color: #ffffff;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    h1, h3, h4 {
        color: #FFA8F3;
        font-weight: bold;
        margin: 20px;
    }

    .btn, a {
        border-radius: 50px;
        border: 2px solid #545454;
        margin: 10px; 
        padding: 10px 20px;
        font-size: 16px;
        color: #ffffff;
        background-color: #ff6ec7;
        transition: background-color 0.3s, color 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn:hover, a:hover {
            background-color: #e05cae;
            color: #ffffff;
        }

    .btn-danger {
        background-color: #ff4c4c;
        border: 2px solid #ff4c4c;
    }

        .btn-danger:hover {
            background-color: #e04343;
            border: 2px solid #e04343;
        }

    .row {
        margin: 20px;
        width: 100%;
        max-width: 800px;
        background-color: #3a3a3a;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    dt {
        color: #FFA8F3;
        font-weight: bold;
    }

    dd {
        margin-left: 0;
        color: #ffffff;
    }

    .text-danger {
        color: #ff6ec7;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .anchor {
        position: fixed;
        bottom: 20px;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        font-size: 24px;
        border-radius: 50%;
        background-color: #ff6ec7;
        color: #ffffff;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .anchor:hover {
            background-color: #e05cae;
        }

    .anchor-up {
        right: 20px;
    }

    .anchor-down {
        left: 20px;
    }
</style>
<h1>Удаление</h1>

<h3>Выберите для удаления строку:</h3>
<div>
    <h4>Ограничения_доступа</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Период_доступа_с)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Период_доступа_с)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Период_доступа_по)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Период_доступа_по)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Доступ_по_IP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Доступ_по_IP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Сотрудники)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Сотрудники.Код_сотрудника)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Расписание)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Расписание.Код_расписания)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Код_ограничения" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
<a href="#" class="anchor anchor-up" onclick="scrollToTop()">&uarr;</a>
<a href="#bottom" class="anchor anchor-down" onclick="scrollToBottom()">&darr;</a>

<script>
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function scrollToBottom() {
        const bottom = document.getElementById('bottom');
        bottom.scrollIntoView({ behavior: 'smooth' });
    }
</script>