@model Company.Models.Периоды_неисполнения_обязанностей

@{
    Layout = "_LayoutNone";
    ViewData["Title"] = "Редактирование";
}
<style>
    body {
        background: linear-gradient(to right, #ff6ec7, #2f2f2f);
        font-family: Arial, sans-serif;
        color: #ffffff;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h1, h2 {
        color: #ff6ec7;
        font-weight: bold;
    }

    .btn, a {
        border-radius: 50px;
        border: 2px solid #ff6ec7;
        padding: 10px 20px;
        font-size: 16px;
        color: #ffffff;
        background-color: #ff6ec7;
        transition: background-color 0.3s, color 0.3s;
        text-decoration: none;
    }

        .btn:hover, a:hover {
            background-color: #e05cae;
            color: #ffffff;
        }

    .row {
        margin-bottom: 15px;
    }

    .container {
        background-color: #3a3a3a;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        width: 100%;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        color: #ff6ec7;
        font-weight: bold;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #ff6ec7;
        padding: 10px;
        font-size: 16px;
        background-color: #2f2f2f;
        color: #ffffff;
    }

    .text-danger {
        color: #ff6ec7;
    }

    .anchor {
        position: fixed;
        bottom: 20px;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        font-size: 24px;
        border-radius: 50%;
        background-color: #ff6ec7;
        color: #ffffff;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .anchor:hover {
            background-color: #e05cae;
        }

    .anchor-up {
        right: 20px;
    }

    .anchor-down {
        left: 20px;
    }
</style>

<h1>Редактирование</h1>

<h4>Периоды_неисполнения_обязанностей</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Код_периода" />
            <div class="form-group">
                <label asp-for="Код_сотрудника" class="control-label"></label>
                <select asp-for="Код_сотрудника" class="form-control" asp-items="ViewBag.Код_сотрудника"></select>
                <span asp-validation-for="Код_сотрудника" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_начала" class="control-label"></label>
                <input asp-for="Дата_начала" class="form-control" />
                <span asp-validation-for="Дата_начала" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_окончания" class="control-label"></label>
                <input asp-for="Дата_окончания" class="form-control" />
                <span asp-validation-for="Дата_окончания" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_увольнения" class="control-label"></label>
                <input asp-for="Дата_увольнения" class="form-control" />
                <span asp-validation-for="Дата_увольнения" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_приема" class="control-label"></label>
                <input asp-for="Дата_приема" class="form-control" />
                <span asp-validation-for="Дата_приема" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Тип" class="control-label"></label>
                <input asp-for="Тип" class="form-control" />
                <span asp-validation-for="Тип" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Причина_отсутствия_на_работе" class="control-label"></label>
                <input asp-for="Причина_отсутствия_на_работе" class="form-control" />
                <span asp-validation-for="Причина_отсутствия_на_работе" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Причина_увольнения" class="control-label"></label>
                <input asp-for="Причина_увольнения" class="form-control" />
                <span asp-validation-for="Причина_увольнения" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

<a href="#" class="anchor anchor-up" onclick="scrollToTop()">&uarr;</a>
<a href="#bottom" class="anchor anchor-down" onclick="scrollToBottom()">&darr;</a>

<script>
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function scrollToBottom() {
        const bottom = document.getElementById('bottom');
        bottom.scrollIntoView({ behavior: 'smooth' });
    }
</script>