@model Company.Models.Сотрудники

@{
    Layout = "_LayoutNone";
    ViewData["Title"] = "Детали";
}
<style>
    body {
        background: linear-gradient(to right, #ff6ec7, #2f2f2f);
        font-family: Arial, sans-serif;
        color: #ffffff;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    h1, h3, h4 {
        color: #FFA8F3;
        font-weight: bold;
        margin: 20px;
    }

    .btn, a {
        border-radius: 50px;
        border: 2px solid #545454;
        margin: 10px; 
        padding: 10px 20px;
        font-size: 16px;
        color: #ffffff;
        background-color: #ff6ec7;
        transition: background-color 0.3s, color 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn:hover, a:hover {
            background-color: #e05cae;
            color: #ffffff;
        }

    .row {
        margin: 20px;
        width: 100%;
        max-width: 800px;
        background-color: #3a3a3a;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    dt {
        color: #FFA8F3;
        font-weight: bold;
    }

    dd {
        margin-left: 0;
        color: #ffffff;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .anchor {
        position: fixed;
        bottom: 20px;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        font-size: 24px;
        border-radius: 50%;
        background-color: #ff6ec7;
        color: #ffffff;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .anchor:hover {
            background-color: #e05cae;
        }

    .anchor-up {
        right: 20px;
    }

    .anchor-down {
        left: 20px;
    }
</style>

<div class="container" style="margin-top:200px;">
    <h1>Просмотр деталей</h1>
    <div>
        <h4>Сотрудники</h4>
        <hr />
        <dl class="row">
            <div class="col-md-4" style="overflow-y: auto; max-height: 400px;">
                <dt>
                    @Html.DisplayNameFor(model => model.ФИО)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ФИО)
                </dd>
            </div>
            <div class="col-md-4" style="overflow-y: auto; max-height: 400px;">
                <dt>
                    @Html.DisplayNameFor(model => model.Пол)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Пол)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Дата_рождения)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Дата_рождения)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.СНИЛС)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.СНИЛС)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Мобильный_телефон)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Мобильный_телефон)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Адрес_электронной_почты)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Адрес_электронной_почты)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Адрес_проживания)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Адрес_проживания)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Должность)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Должность)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Статусы)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Статусы.Код_статуса)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Аккаунты)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Аккаунты.Логин)
                </dd>
        </dl>
    </div>
    <div>
        <a class="btn" asp-action="Edit" asp-route-id="@Model?.Код_сотрудника">Редактировать</a> |
        <a class="btn" asp-action="Index">Назад</a>
    </div>
</div>
<a href="#" class="anchor anchor-up" onclick="scrollToTop()">&uarr;</a>
<a href="#bottom" class="anchor anchor-down" onclick="scrollToBottom()">&darr;</a>

<script>
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function scrollToBottom() {
        const bottom = document.getElementById('bottom');
        bottom.scrollIntoView({ behavior: 'smooth' });
    }
</script>