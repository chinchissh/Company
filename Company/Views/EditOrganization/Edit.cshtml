@model Company.Models.Организации

@{
    Layout = "_LayoutNone";
    ViewData["Title"] = "Редактирование";
}

<style>
    body {
        background: linear-gradient(to right, #ff6ec7, #2f2f2f);
        font-family: Arial, sans-serif;
        color: #ffffff;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    h1, h4 {
        color: #FFA8F3;
        font-weight: bold;
        margin: 20px;
    }

    .btn, a {
        border-radius: 50px;
        border: 2px solid #545454;
        margin: 10px;
        padding: 10px 20px;
        font-size: 16px;
        color: #ffffff;
        background-color: #ff6ec7;
        transition: background-color 0.3s, color 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn:hover, a:hover {
            background-color: #e05cae;
            color: #ffffff;
        }

    .row {
        margin: 20px;
        width: 100%;
        max-width: 800px;
        background-color: #3a3a3a;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    .control-label {
        color: #ffffff;
    }

    .text-danger {
        color: #ff6ec7;
    }

    .anchor {
        position: fixed;
        bottom: 20px;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        font-size: 24px;
        border-radius: 50%;
        background-color: #ff6ec7;
        color: #ffffff;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .anchor:hover {
            background-color: #e05cae;
        }

    .anchor-up {
        right: 20px;
    }

    .anchor-down {
        left: 20px;
    }
</style>

<div>
    <h1>Редактирование</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Код_организации" />
                <div class="form-group">
                    <label asp-for="Код_статуса" class="control-label"></label>
                    <select asp-for="Код_статуса" class="form-control" asp-items="ViewBag.Код_статуса"></select>
                    <span asp-validation-for="Код_статуса" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Название_организации" class="control-label"></label>
                    <input asp-for="Название_организации" class="form-control" />
                    <span asp-validation-for="Название_организации" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ИНН" class="control-label"></label>
                    <input asp-for="ИНН" class="form-control" />
                    <span asp-validation-for="ИНН" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="КПП" class="control-label"></label>
                    <input asp-for="КПП" class="form-control" />
                    <span asp-validation-for="КПП" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ОГРН" class="control-label"></label>
                    <input asp-for="ОГРН" class="form-control" />
                    <span asp-validation-for="ОГРН" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Код" class="control-label"></label>
                    <input asp-for="Код" class="form-control" />
                    <span asp-validation-for="Код" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Тип_организации" class="control-label"></label>
                    <input asp-for="Тип_организации" class="form-control" />
                    <span asp-validation-for="Тип_организации" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Дата_закрытия" class="control-label"></label>
                    <input asp-for="Дата_закрытия" class="form-control" />
                    <span asp-validation-for="Дата_закрытия" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Код_родительской_организации" class="control-label"></label>
                    <select asp-for="Код_родительской_организации" class="form-control" asp-items="ViewBag.Код_родительской_организации"></select>
                    <span asp-validation-for="Код_родительской_организации" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn">Назад к списку</a>
    </div>
</div>
<a href="#" class="anchor anchor-up" onclick="scrollToTop()">&uarr;</a>
<a href="#bottom" class="anchor anchor-down" onclick="scrollToBottom()">&darr;</a>

<script>
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function scrollToBottom() {
        const bottom = document.getElementById('bottom');
        bottom.scrollIntoView({ behavior: 'smooth' });
    }
</script>