@model IEnumerable<Company.Models.Организации>

@{
    Layout = "_LayoutNone";
    ViewData["Title"] = "Главная";
}

<style>
    body {
        background: linear-gradient(to right, #ff6ec7, #2f2f2f);
        font-family: Arial, sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
    }

    h1, h2 {
        color: #FFA8F3;
        font-weight: bold;
        margin: 50px 20px 20px 20px; 
    }

    .btn, a {
        border-radius: 50px;
        border: 2px solid #545454;
        margin: 10px; 
        padding: 10px 20px;
        font-size: 16px;
        color: #fff;
        background-color: #ff6ec7;
        transition: background-color 0.3s, color 0.3s;
        text-decoration: none;
        display: inline-block; 
    }

        .btn:hover, a:hover {
            background-color: #e05cae;
            color: #fff;
        }

    .table {
        width: 90%;
        margin: 20px 0;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #545454;
            padding: 10px;
            text-align: left;
        }

        .table th {
            background-color: #3a3a3a;
            color: #FFA8F3;
        }

        .table td {
            background-color: #2f2f2f;
        }

        .table a {
            color: #FFA8F3;
        }

            .table a:hover {
                color: #fff;
            }

    p a {
        margin-left: 20px;
    }

    .button-container {
        margin-top: 20px;
        text-align: center;
    }

    .return-button {
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        background-color: #ff6ec7;
        color: #ffffff;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .return-button:hover {
            background-color: #e05cae;
        }

    .anchor {
        position: fixed;
        bottom: 20px;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        font-size: 24px;
        border-radius: 50%;
        background-color: #ff6ec7;
        color: #ffffff;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .anchor:hover {
            background-color: #e05cae;
        }

    .anchor-up {
        right: 20px;
    }

    .anchor-down {
        left: 20px;
    }
</style>

<h1>Редактирование/Добавление/Удаление информации об организациях</h1>

<p>
    <a class="btn" asp-action="Create">Создать новую организацию</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Название_организации)</th>
            <th>@Html.DisplayNameFor(model => model.ИНН)</th>
            <th>@Html.DisplayNameFor(model => model.КПП)</th>
            <th>@Html.DisplayNameFor(model => model.ОГРН)</th>
            <th>@Html.DisplayNameFor(model => model.Код)</th>
            <th>@Html.DisplayNameFor(model => model.Тип_организации)</th>
            <th>@Html.DisplayNameFor(model => model.Дата_закрытия)</th>
            <th>@Html.DisplayNameFor(model => model.Статусы)</th>
            <th>@Html.DisplayNameFor(model => model.Родительская_организация)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Название_организации)</td>
                <td>@Html.DisplayFor(modelItem => item.ИНН)</td>
                <td>@Html.DisplayFor(modelItem => item.КПП)</td>
                <td>@Html.DisplayFor(modelItem => item.ОГРН)</td>
                <td>@Html.DisplayFor(modelItem => item.Код)</td>
                <td>@Html.DisplayFor(modelItem => item.Тип_организации)</td>
                <td>@Html.DisplayFor(modelItem => item.Дата_закрытия)</td>
                <td>@Html.DisplayFor(modelItem => item.Статусы.Код_статуса)</td>
                <td>@Html.DisplayFor(modelItem => item.Родительская_организация.Код_организации)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Код_организации">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Код_организации">Список организаций</a> |
                    <a asp-action="Delete" asp-route-id="@item.Код_организации">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="#" class="anchor anchor-up" onclick="scrollToTop()">&uarr;</a>
<a href="#bottom" class="anchor anchor-down" onclick="scrollToBottom()">&darr;</a>

<script>
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function scrollToBottom() {
        const bottom = document.getElementById('bottom');
        bottom.scrollIntoView({ behavior: 'smooth' });
    }
</script>
<a id="bottom"></a>
<div class="button-container">
    <form method="get" action="/MenuAdmin/Index">
        <button type="submit" class="return-button">Вернуться в меню для администраторов</button>
    </form>
</div>