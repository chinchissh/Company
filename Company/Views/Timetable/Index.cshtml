@model IEnumerable<Company.Models.Расписание>

@{
    Layout = "_LayoutNone";
    ViewData["Title"] = "Главная";
}
<style>
    body {
        background: linear-gradient(to right, #ff6ec7, #2f2f2f);
        font-family: Arial, sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
    }

    h1, h2 {
        color: #FFA8F3;
        font-weight: bold;
        margin: 50px 20px 20px 20px; /* Отступ сверху и слева для заголовка */
    }

    .btn, a {
        border-radius: 50px;
        border: 2px solid #545454;
        margin: 10px; /* Увеличение расстояния между кнопками */
        padding: 10px 20px;
        font-size: 16px;
        color: #fff;
        background-color: #ff6ec7;
        transition: background-color 0.3s, color 0.3s;
        text-decoration: none;
        display: inline-block; /* Обеспечивает наличие отступов между кнопками */
    }

        .btn:hover, a:hover {
            background-color: #e05cae;
            color: #fff;
        }

    /* Стилизация таблицы */
    .table {
        width: 90%;
        margin: 20px auto; /* Центрирование таблицы */
        border-collapse: collapse;
    }

        /* Стилизация заголовка таблицы */
        .table th {
            background-color: #3a3a3a; /* Цвет фона заголовка */
            color: #ff6ec7; /* Цвет текста заголовка */
            border: 1px solid #545454;
            padding: 10px;
            text-align: left;
        }

        /* Стилизация ячеек данных таблицы */
        .table td {
            background-color: #2f2f2f; /* Цвет фона ячеек данных */
            color: #ff6ec7; /* Цвет текста ячеек данных */
            border: 1px solid #545454;
            padding: 10px;
            text-align: left;
        }

        /* Стилизация ссылок в таблице */
        .table a {
            color: #ff6ec7; /* Цвет ссылок */
            text-decoration: none; /* Убираем подчеркивание */
        }

            /* Стилизация ссылок при наведении */
            .table a:hover {
                text-decoration: underline; /* Подчеркиваем ссылку при наведении */
            }

    p a {
        margin-left: 20px;
    }

    .button-container {
        margin-top: 20px;
        text-align: center;
    }

    .return-button {
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        background-color: #ff6ec7;
        color: #ffffff;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .return-button:hover {
            background-color: #e05cae;
        }

    .anchor {
        position: fixed;
        bottom: 20px;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        font-size: 24px;
        border-radius: 50%;
        background-color: #ff6ec7;
        color: #ffffff;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .anchor:hover {
            background-color: #e05cae;
        }

    .anchor-up {
        right: 20px;
    }

    .anchor-down {
        left: 20px;
    }
</style>
<h1>Главная</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.День_недели)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Время_начала)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Время_окончания)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сотрудники)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.День_недели)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Время_начала)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Время_окончания)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Сотрудники.Код_сотрудника)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Код_расписания">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Код_расписания">Список</a> |
                <a asp-action="Delete" asp-route-id="@item.Код_расписания">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a href="#" class="anchor anchor-up" onclick="scrollToTop()">&uarr;</a>
<a href="#bottom" class="anchor anchor-down" onclick="scrollToBottom()">&darr;</a>

<script>
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function scrollToBottom() {
        const bottom = document.getElementById('bottom');
        bottom.scrollIntoView({ behavior: 'smooth' });
    }
</script>

<a id="bottom"></a>
<div class="button-container">
    <form method="get" action="/MenuAdmin/Index">
        <button type="submit" class="return-button">Вернуться в меню для администраторов</button>
    </form>
</div>